#include <iostream>
using namespace std;
int main(void)
{
    int Counter = 1;
    float Mark;
    float Sum = 0;
    float Average;

    while (Mark == -1)
    {
        cout << "Enter mark: " << Counter;
        cin >> Mark;
        Sum += Mark;
        Counter++;
    }
    Average = Sum / (Counter - 2);

    cout << "Average of All Marks is : " << Average;
}
